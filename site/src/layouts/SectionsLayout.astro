---
import Layout from "./Layout.astro"

interface Props {
  url?: string
  title?: string
  image?: string
  description?: string
  gapless?: boolean
}

const { url, title, image, description, gapless } = Astro.props
---

<Layout {url} {title} {image} {description}>
  <main class:list={["flex flex-col relative", {"gap-8 md:gap-16 lg:gap-32": !gapless}]}>
    <slot />
  </main>
</Layout>

